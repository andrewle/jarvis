<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" manifest="app.manifest">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>	
	<style type="text/css" media="screen">@import "jqtouch/jqtouch.min.css";</style>
  <style type="text/css" media="screen">@import "themes/jqt/theme.min.css";</style>
  <link rel="stylesheet" href="css/app.css" type="text/css" media="screen" charset="utf-8" />

	<script src="jqtouch/jquery.1.3.2.min.js" type="application/x-javascript" charset="utf-8"></script>
  <script src="jqtouch/jqtouch.min.js" type="application/x-javascript" charset="utf-8"></script>
	<script src="extensions/jqt.offline.js" type="application/x-javascript" charset="utf-8"></script>
  <script src="js/app.js" type="application/x-javascript" charset="utf-8"></script>
  
	<title>Jarvis</title>
</head>
<body>

<div id="home" class="current"> 
  <div class="toolbar"> 
    <h1>Jarvis</h1> 
  </div>
	<ul class="rounded">
		<li class="arrow"><a href="#typeit">Type It</a></li>
		<li class="arrow"><a href="#pandora">Pandora</a></li>
	</ul>
</div>

<div id="typeit">
	<div class="toolbar"> 
    <h1>Type it</h1>
		<a href="#" class="back">Back</a>
  </div>

	<form action="http://jarvis.local/" method="post" accept-charset="utf-8">
		<ul class="edit rounded"> 
			<li><input type="text" name="typed_text" placeholder="Type out some text to send to Jarvis" id="typed_text" /></li>
		</ul>
		<a style="margin:0 10px;color:rgba(0,0,0,.9)" href="#" class="submit whiteButton">Type It</a>
	</form>
</div>

<div id="pandora">
	<div class="toolbar"> 
    <h1>Pandora</h1>
		<a href="#" class="back">Back</a>
  </div>

	<form action="http://jarvis.local/pandora" method="post" accept-charset="utf-8">
		<ul class="rounded"> 
			<li><a href="#" rel="playpause">Start/Play/Pause Pandora</a></li>
		</ul>
		<ul class="rounded">
			<li><a href="#" rel="thumb_up">Thumb Up</a></li>
			<li><a href="#" rel="thumb_down">Thumb Down</a></li>
			<li><a href="#" rel="skip">Skip Song</a></li>
		</ul>
	</form>
</div>
</body>
</html>